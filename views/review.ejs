<%include header%>
<body>
<%include navbar%>
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <div class="content-wrapper m-3 p-5">
                <h1>Review</h1>
                <%- msg%>
                <form action="/reviewProcess" method="post">
                    <div class="form-group-one">
                        <label for="bookTitle">Book Title:</label>
                        <input type="text" class="form-control" name="title">
                        <label for="author">Author:</label>
                        <input type="text" class="form-control" name="author">
                        <label for="isbn">ISBN:</label>
                        <input type="text" class="form-control" name="isbn">
                        <div class="ratingDiv">
                            <div>Rating:</div>
                            <a class="like" ><i class="fa fa-thumbs-o-up"></i>  
                                Like <input id="likeButton" class="qty1" name="qty1" readonly="readonly" type="text" value="0" />
                            </a>
                            <a class="dislike"><i class="fa fa-thumbs-o-down"></i> 
                                Dislike <input id="dislikeButton" class="qty2"  name="qty2" readonly="readonly" type="text" value="0" />
                            </a>
                        </div>
                        <div class="dropdown">
                            <div>Genre:</div>
                            <button onclick="genreDropdown()" class="dropbtn my-1">Select One</button>
                            <div id="my-genre-dropdown" class="dropdown-content">
                                <% for(let i = 0; i<genresArray.length; i++) { %>
                                <a href="genres"><%- genresArray[i] %></a>
                                <% } %>
                            </div>
                        </div>
                        <div class="submitDiv">
                            <button class="btn btn-primary">Submit!</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%%>
</div>
</body>
<%include footer%>
