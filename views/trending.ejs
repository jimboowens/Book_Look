<%include header%>

<body>
    <%include navbar%>
    <%if (!choice){%>
    <div class="container">
        <div class="row">    
            <div class="col-sm-6 col-sm-offset-3 text-center">
                <h2 class="text-info">Please select what genre of trending you would like to see:</h2>
                <a href="trending/hardcover-fiction" button class="btn btn-success clickHere bestSellers">Hardcover Fiction</a>
                <a href="trending/hardcover-nonfiction" button class="btn btn-success clickHere bestSellers">Hardcover Nonfiction</a>
                <a href="trending/paperback-fiction" button class="btn btn-success clickHere bestSellers">Paperback Fiction</a>
                <a href="trending/paperback-nonfiction" button class="btn btn-success clickHere bestSellers">Paperback Nonfiction</a>
                <a href="trending/e-book-fiction" button class="btn btn-success clickHere bestSellers">e-Book Fiction</a>
                <a href="trending/e-book-nonfiction" button class="btn btn-success clickHere bestSellers">e-Book Nonfiction</a>
            </div>
        </div>
    </div>
    <%}else{%>
    <div class="container">
        <div class="content-wrapper mt-3">
            <div><h1>Trending Books:</h1></div>
            <% json.results.books.forEach((book)=>{ %>
                <div class="col-sm">
                    <h4 class="book-info">Book Rank: <%=book.rank%></h4>
                    <!-- <p class="book-info"><%=//book.book_image%></p> -->
                    <img src="<%=book.book_image%>" class="book-image">
                    <p><a href ="<%=book.amazon_product_url%>"class="book-info" target="blank"><%=book.title%></a></p>
                    <p class="book-text">Synopsis - <%=book.description%></p>
                    <p class="book-info"></p>
                    <p class="book-info"></p>
                    <p class="book-info"></p>
                    <p class="book-info"></p>
                </div>
            <% }) %>
        </div>
    </div> 
    <%}%>
    <%=//JSON.stringify(json)%> 
</body>
<%include footer%>                   
                        
              